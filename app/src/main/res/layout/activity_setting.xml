<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/buttons"
        android:textAlignment="center"
        android:text="Esquema de cores"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="30sp"/>
    <LinearLayout
        android:id="@+id/buttons"
        android:background="@drawable/border"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:text="U"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <TextView
                android:text="R"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <TextView
                android:text="F"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                app:backgroundTint="@color/yellowSticker"
                android:id="@+id/color_button_1"
                android:background="@drawable/squared_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <Button
                app:backgroundTint="@color/greenSticker"
                android:id="@+id/color_button_2"
                android:background="@drawable/squared_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <Button
                app:backgroundTint="@color/redSticker"
                android:id="@+id/color_button_3"
                android:background="@drawable/squared_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:text="D"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <TextView
                android:text="L"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <TextView
                android:text="B"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                app:backgroundTint="@color/white"
                android:id="@+id/color_button_4"
                android:background="@drawable/squared_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <Button
                app:backgroundTint="@color/blueSticker"
                android:id="@+id/color_button_5"
                android:background="@drawable/squared_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <Button
                app:backgroundTint="@color/orangeSticker"
                android:id="@+id/color_button_6"
                android:background="@drawable/squared_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>